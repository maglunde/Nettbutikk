@model List<Nettbutikk.Viewmodels.CartItem>

<h4>Din ordre</h4>
<ul>
    @{ 
        if (Model.Count == 0)
        {
            <li>
                Ingen varer i kurven
            </li>
        }
    }
    @foreach (var item in Model)
    {
        var SumTotal = item.Price * item.Count;

        <li>
            @item.Count stk @item.Name (@item.ProductId), Totalt kr. @String.Format("{0:n}", SumTotal)
        </li>
    }
</ul>

