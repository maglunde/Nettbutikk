            elem.removeClass("enterLeft");
            elem.addClass("leaveLeft");

            setTimeout(function () {
                box.removeClass("enterTop")
                box.addClass("leaveTop")
            }, 300);
            return;
        })

        box.removeClass("leaveTop")
        box.addClass("enterTop")
        setTimeout(function () {
            elem.removeClass("leaveLeft");
            elem.addClass("enterLeft");

        }, 200)

        setTimeout(function () {
            elem.removeClass("enterLeft");
            elem.addClass("leaveLeft");

            setTimeout(function () {
                box.removeClass("enterTop")
                box.addClass("leaveTop")
            }, 300);
        }, leaveTime);

    }


